@model WebXemPhim.Models.Ve

@{
    ViewBag.Title = "BuyTicket";
    Layout = "~/Views/Layout/_HomeLayout.cshtml";
}
<section class="title">
    <div class="container">
        <div class="row-fluid">
            <div class="span6">
                <h1 style="font-family: 'Itim',cursive;">Đặt Vé Online</h1>
            </div>
            <div class="span6">
                <ul class="breadcrumb pull-right">
                    <li><a href="@Url.Action("Index","TrangChu",null, Request.Url.Scheme)">Trang Chủ</a> <span class="divider">/</span></li>
                    <li class="active">Đặt Vé</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<!-- / .title -->

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group thong-tin-phim">
                <h3>Thông tin phim:</h3>
                <label>Phim: </label>@Html.DropDownList("PhimID", new SelectList(new string[] { }), new { @id = "dsPhim" })
                <label>Loại Vé: </label>@Html.DropDownList("LoaiVeID", new SelectList(new string[] { }), new { @id = "dsLoaiVe" })
                <label>Ngày Chiếu: </label>@Html.DropDownList("NgayChieu", new SelectList(new string[] { }), new { @id = "dsNgayChieu" })
                <label>Giờ Chiếu: </label>@Html.DropDownList("GioChieu", new SelectList(new string[] { }), new { @id = "dsGioChieu" })
                @Html.EditorFor(model => model.LichChieuID, new { htmlAttributes = new { @class = "form-control", @id = "LichChieuID", @style = "display:none" } })
                <label>Phòng Chiếu: </label><h4 id="phong-chieu"></h4>
                <label>Ghế: </label>@Html.DropDownList("GheID", new SelectList(new string[] { }), new { @id = "dsGhe" })
            </div>  
            <div class="form-group">
                <label>Tên khách hàng: </label>
                @Html.EditorFor(model => model.TenKhachHang, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenKhachHang, "", new { @class = "text-danger" })
           
                <label>Số Chứng Minh Nhân Dân: </label>
                    @Html.EditorFor(model => model.SoCMND, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SoCMND, "", new { @class = "text-danger" })

                <label>Số Điện Thoại: </label>
                    @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
            </div>

          
            <div class="form-group thong-tin-thanh-toan">
                <label style="font-size: medium">THANH TOÁN: </label>@Html.EditorFor(model => model.ThanhTien, new { htmlAttributes = new { @class = "form-control", @id = "ThanhTien", @style= "font-family: 'Itim', cursive; text-align: center; color:#000000; font-size: x-large; width: 100%; border: 0px; "} })
                <label id="gia-ve" style="font-family: 'Itim', cursive; text-align: center; color:#000000; display: none; font-size: x-large; width: 100%"></label>
            </div>
            <hr />
            <div class="form-group" style="border: 0px; text-align: center;">
                <button type="submit" class="btn btn-danger btnDatVe">ĐẶT VÉ <i class="fa fa-credit-card"></i></button>
            </div>
        </div>
    }
   
</div>

