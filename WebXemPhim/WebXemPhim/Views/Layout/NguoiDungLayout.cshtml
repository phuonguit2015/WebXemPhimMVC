                                <li><a href='@Url.Action("Movies","Home",new { tieude="PHIM SẮP CHIẾU" , trangthai=TrangThaiPhim.Sap_Chieu })'>PHIM SẮP CHIẾU</a></li>
                                <li style="border-top: 1px solid #9B59B6"></li>
                                <li><a href='@Url.Action("Movies","Home",new { tieude="TẤT CẢ PHIM" , trangthai=TrangThaiPhim.Da_Chieu })'>TẤT CẢ</a></li>
                            </ul>
                        </li>                        
                        <li><a href="@Url.Action("TicketPrices","Home",null, Request.Url.Scheme)">GIÁ VÉ</a></li>
                        <li><a href="@Url.Action("Sale","Home",null, Request.Url.Scheme)">ƯU ĐÃI SỰ KIỆN</a></li>
                        <li><a href="@Url.Action("Contact","Home",null, Request.Url.Scheme)">LIÊN HỆ</a></li>
                        <li class="login">
                            <a data-toggle="modal" href="#loginForm"><i class="fa fa-sign-in"></i></a>
                        </li>
                        <li id="datve"  >
                            <a  href="#" style="color: #fff; font-size: large;">ĐẶT VÉ</a>
                        </li>

                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </div>
    </header>
    <!-- /header -->
    <!-- Noi dung -->
    <section>
        @RenderBody()
    </section>
    <!-- /Noi dung -->
    <!--Bottom-->
    <section id="bottom" class="main">
        <!--Container-->
        <div class="container">
            <!--row-fluids-->
            <div class="row-fluid">
                <!--Contact Form-->
                <div class="col-md-4">
                    <h4>ĐỊA CHỈ</h4>
                    <ul class="unstyled address">
                        <li>
                            <i class="fa fa-location-arrow"></i>
