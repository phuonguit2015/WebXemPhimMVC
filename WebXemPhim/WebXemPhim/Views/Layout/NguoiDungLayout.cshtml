                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a id="logo" class="pull-left" href="#" style="background: url('../../Content/image/logo.png') no-repeat 0 50%;"></a>
                <div class="nav-collapse collapse pull-right">
                    <ul class="nav">
                        <li><a href="@Url.Action("Index","TrangChu",null, Request.Url.Scheme)">TRANG CHỦ</a></li>
                        <li><a href="@Url.Action("Showtimes","Home",null, Request.Url.Scheme)">LỊCH CHIẾU</a></li>
