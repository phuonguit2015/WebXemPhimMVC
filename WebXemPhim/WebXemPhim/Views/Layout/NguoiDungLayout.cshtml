            <i class="icon-remove" data-dismiss="modal" aria-hidden="true"></i>
            <h4>Đăng Nhập</h4>
        </div>
        <!--Modal Body-->
        <div class="modal-body">
            <form class="form-inline" action="#" method="post" id="form-login">
                <input type="text" class="input-small" placeholder="Email">
                <input type="password" class="input-small" placeholder="Mật khẩu">
                <label class="checkbox">
                    <input type="checkbox"> Nhớ tài khoản
                </label>
                <a href='@Url.Action("KiemTraDangNhap", "NguoiDungs", new { taiKhoan = "aaa", matKhau = "222" }, Request.Url.Scheme)' class="btn btn-primary">Đăng Nhập</a>
            </form>
        </div>
        <!--/Modal Body-->
    </div>
    <!--  /Login form -->
    <script src="~/Content/js/jquery-1.9.1.min.js"></script>
    <script src="~/Content/js/AdminJSLayout/bootstrap.min.js"></script>
    <script src="~/Content/js/main.js"></script>
    <script type="text/javascript" src="~/Content/js/Slider/jquery.eislideshow.js"></script>
    <script type="text/javascript" src="~/Content/js/Slider/jquery.easing.1.3.js"></script>
    <script src="~/Content/js/Slider/tmp.js"></script>
    <script src="~/Content/js/trangChuController.js"></script>
    <script src="~/Content/js/PopupModal.js"></script>
    <script src="~/Content/js/homeController.js"></script>   
    @if (IsSectionDefined("jsFooter"))
    {
        @RenderSection("jsFooter",required:false);
    }
